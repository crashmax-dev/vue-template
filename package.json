{
  "name": "@vue-workspace/root",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "pnpm": ">=10.28",
    "node": ">=22.22"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:apps": "turbo run dev --filter=./apps/*",
    "dev:ui": "turbo run dev --filter=./packages/ui",
    "dev:packages": "turbo run dev --filter=./packages/*",
    "build": "turbo run build --filter=./apps/*",
    "build:ui": "turbo run build --filter=./packages/ui",
    "build:packages": "turbo run build --filter=./packages/*",
    "type-check": "turbo run type-check",
    "test": "vitest run",
    "test:unit": "vitest",
    "test:unit-ui": "vitest --ui",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "generate-api": "pnpm --filter=@vue-workspace/api generate-api",
    "clean": "turbo run clean && rm -rf .turbo",
    "check-update": "pnpm update -i -r -L"
  },
  "devDependencies": {
    "@antfu/eslint-config": "7.0.1",
    "@iconify-json/heroicons-outline": "1.2.1",
    "@pinia/testing": "1.0.3",
    "@types/jscodeshift": "17.3.0",
    "@types/node": "24.10.9",
    "@vitejs/plugin-vue": "6.0.2",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/ui": "4.0.18",
    "@vue/test-utils": "2.4.6",
    "@vue/tsconfig": "0.8.1",
    "eslint": "9.39.2",
    "eslint-plugin-format": "1.3.1",
    "eslint-plugin-pinia": "0.4.2",
    "happy-dom": "20.3.9",
    "jscodeshift": "17.3.0",
    "playwright": "1.58.0",
    "prettier-plugin-css-order": "2.2.0",
    "sass-embedded": "1.93.3",
    "tsx": "4.20.6",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "unplugin-icons": "22.5.0",
    "unplugin-vue-components": "30.0.0",
    "vite": "7.2.4",
    "vite-plugin-static-copy": "3.1.4",
    "vite-plugin-vue-devtools": "8.0.5",
    "vitest": "4.0.18",
    "vitest-browser-vue": "2.0.2",
    "vue-tsc": "3.1.5"
  }
}
